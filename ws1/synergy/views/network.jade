extends layout

block content
  div.container
    div.col-sm-6.col-md-6.col-md-offset-3
      div.jumbotron
        if user
          include navbar
          h2 <b>#{user}'s Network</b>
          if friends
            ul.user-network
                each friend in friends
                  a(href="/user/#{friend._id}") #{friend.firstName} #{friend.lastName}
                  br
          else
            p You currently have no one in your network. Rent or Add a Workspace to get started.
        else
          h2 <b>Welcome to Synergy Space!</b>
          a(href="/login") Please login to see your network.