extends layout

block content
  div.container
    div.col-sm-6.col-md-6.col-md-offset-3
      div.jumbotron
        if user
          include navbar
          h2 <b>#{user.username}'s Network</b>
          if friends
            ul.user-network
                each friend in friends
                  li friend.firstname friend.lastname
          else
            <p> You currenly have no one in your network. Add a worksapce to get started.</p>
        else
          h2 <b>Welcome to Synergy Space!</b>
          a(href="/") Please login to see your network.