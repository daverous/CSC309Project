extends layout

block content
  div.container
    div.col-sm-6.col-md-6.col-md-offset-3
      div.jumbotron
        if user
          include navbar
          h2 <b>#{user.username}'s Network</b>
          ul.user-network
              each user in user.network
                li user
        else
          h2 <b>Welcome to Synergy Space!</b>
          p a(href='/') <b>Please login to see your network.</b>