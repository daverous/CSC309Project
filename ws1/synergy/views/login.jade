extends layout

block content
	div.container
		div.col-sm-6.col-md-6.col-md-offset-3
			form( method='post')#login-form.well.span4
				h2 <b>Welcome to Synergy Space!</b>
				h3 Please sign in
				p
					input.form-control(type='text', name='username', placeholder='Username')
				p
					input.form-control(type='password', name='password', placeholder='Password')
				p
					button(type='submit')#btn-login.btn.btn-primary
						i.icon-lock.icon-white
						| Sign in
			
				//
					label.checkbox.input(type='checkbox' style='margin-left: 1px;' value='remember-me')  
						&nbsp; &nbsp; &nbsp; Remember me
				
				div.clear-fix
				div.btm-links
					//
						p
							a(href='#')#forgot-password Forgot Your Password?
					p
						a(href='/register')#create-account Create a new account
				#message
					if message
						h3.text-center.error-message #{message}
