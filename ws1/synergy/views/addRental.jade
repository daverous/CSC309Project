extends layout
block content
    include navbar
    div.container
      div.col-sm-6.col-md-6.col-md-offset-3
        block content
          form(method="post", enctype="multipart/form-data")
              input(type="text", name="houseName")
              input(type='text',pattern='\\d*', name='maxtenents', placeholder='Maximum Number of tenents')
              input(type="text", name="description")
              input(type="file", multiple, name="image")
              button(type="submit", value="Upload") Upload File

          #message
            if message
              h3.text-center.error-message #{message}


