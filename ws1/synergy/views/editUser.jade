extends layout

block content
	include navbar
	div.container
		div.col-sm-6.col-md-6.col-md-offset-3
		if user
			form(method='post' action="/modifyUser")#register-form.well.span4
				h2 <b>Edit Profile for  #{user.username}</b>
				br
				p
					input.form-control(type='text', name='firstname', value='#{user.firstName}')
				p
					input.form-control(type='text', name='lastname', value='#{user.lastName}')
				p
					input.form-control(type='email', name='email', value='#{user.email}')
				//- p
				//- 	input.form-control(type='username', name='username', value='#{user.username}')
				br
				input(name="id", value=user._id, type='hidden') 

				button(type='submit')#btn-login.btn.btn-success
					i.icon-lock.icon-white
					| Edit
		else
			h2 <b> There has been an error
				#message
					if message
						h3.text-center.error-message #{message}
